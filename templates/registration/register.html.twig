{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<main class="flex flex-1 items-center justify-center py-12 sm:px-6 lg:px-8">
    <div class="w-full max-w-md space-y-8 bg-gray-800 p-8 rounded-xl shadow-lg border border-gray-700">
        <div>
            <h2 class="mt-6 text-center text-3xl font-extrabold text-[var(--text-primary)]">
                Create your account
            </h2>
            <p class="mt-2 text-center text-sm text-[var(--text-secondary)]">
                Join our dance community today!
            </p>
        </div>

        {{ form_start(registrationForm, {
            attr: {class: "mt-8 space-y-6"}
        }) }}

        {{ form_errors(registrationForm) }}

        <div class="rounded-md shadow-sm -space-y-px">
            <div class="mb-4">
                {{ form_label(registrationForm.firstName, 'First Name', {
                    label_attr: {class: 'block text-sm font-medium text-[var(--text-secondary)] mb-2'}
                }) }}
                {{ form_widget(registrationForm.firstName, {
                    attr: {
                        class: 'w-full p-3 bg-gray-700 border border-gray-600 rounded-md text-[var(--text-primary)] placeholder-[var(--text-secondary)] focus:outline-none focus:ring-2 focus:ring-[var(--primary-color)] focus:border-transparent'
                    }
                }) }}
                {{ form_errors(registrationForm.firstName) }}
            </div>

            <div class="mb-4">
                {{ form_label(registrationForm.lastName, 'Last Name', {
                    label_attr: {class: 'block text-sm font-medium text-[var(--text-secondary)] mb-2'}
                }) }}
                {{ form_widget(registrationForm.lastName, {
                    attr: {
                        class: 'w-full p-3 bg-gray-700 border border-gray-600 rounded-md text-[var(--text-primary)] placeholder-[var(--text-secondary)] focus:outline-none focus:ring-2 focus:ring-[var(--primary-color)] focus:border-transparent'
                    }
                }) }}
                {{ form_errors(registrationForm.lastName) }}
            </div>

            <div class="mb-4">
                {{ form_label(registrationForm.email, 'Email address', {
                    label_attr: {class: 'block text-sm font-medium text-[var(--text-secondary)] mb-2'}
                }) }}
                {{ form_widget(registrationForm.email, {
                    attr: {
                        class: 'w-full p-3 bg-gray-700 border border-gray-600 rounded-md text-[var(--text-primary)] placeholder-[var(--text-secondary)] focus:outline-none focus:ring-2 focus:ring-[var(--primary-color)] focus:border-transparent'
                    }
                }) }}
                {{ form_errors(registrationForm.email) }}
            </div>

            <div class="mb-4">
                {{ form_label(registrationForm.plainPassword, 'Password', {
                    label_attr: {class: 'block text-sm font-medium text-[var(--text-secondary)] mb-2'}
                }) }}
                {{ form_widget(registrationForm.plainPassword, {
                    attr: {
                        class: 'w-full p-3 bg-gray-700 border border-gray-600 rounded-md text-[var(--text-primary)] placeholder-[var(--text-secondary)] focus:outline-none focus:ring-2 focus:ring-[var(--primary-color)] focus:border-transparent'
                    }
                }) }}
                {{ form_errors(registrationForm.plainPassword) }}
            </div>

            <div class="mb-4 flex items-center space-x-2">
                {{ form_widget(registrationForm.agreeTerms, {
                    attr: {class: 'h-4 w-4 text-[var(--primary-color)] border-gray-600 rounded'}
                }) }}
                {{ form_label(registrationForm.agreeTerms, null, {
                    label_attr: {class: 'text-sm text-[var(--text-secondary)]'}
                }) }}
                {{ form_errors(registrationForm.agreeTerms) }}
            </div>
        </div>

        <div>
            <button type="submit"
                class="w-full flex justify-center py-3 px-4 border border-transparent text-sm font-bold rounded-md text-black bg-[var(--primary-color)] hover:bg-[var(--secondary-color)] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[var(--accent-color)] transition-colors duration-200">
                Sign Up
            </button>
        </div>

        <div class="text-center">
            <p class="text-sm text-[var(--text-secondary)]">
                Already have an account?
                <a href="{{ path('app_login') }}" class="font-medium text-[var(--primary-color)] hover:underline">
                    Log in
                </a>
            </p>
        </div>

        {{ form_end(registrationForm) }}
    </div>
</main>
{% endblock %}
