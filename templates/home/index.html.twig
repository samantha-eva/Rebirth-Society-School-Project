{% extends 'base.html.twig' %}

{% block title %}DanceFlow{% endblock %}

{% block body %}
<main class="flex-1 bg-black text-[var(--text-primary)]">

    {# Hero Section #}
    <section class="relative h-[60vh] flex items-center justify-center text-center">
        <div class="absolute top-0 left-0 w-full h-full bg-cover bg-center" 
             style="background-image: url('https://example.com/background.jpg');"></div>
        <div class="absolute top-0 left-0 w-full h-full bg-black/70 z-10"></div>
        <div class="relative z-20 px-4">
            <h1 class="text-4xl md:text-6xl font-extrabold text-white mb-6 leading-tight drop-shadow-lg">
                Bienvenue sur DanceFlow!
            </h1>
            <p class="text-lg text-gray-300 max-w-2xl mx-auto drop-shadow-md">
                Découvrez nos packs vidéo exclusifs et apprenez la danse à votre rythme.
            </p>
        </div>
    </section>

    {# Packs Section #}
    <section class="py-24">
        <div class="container mx-auto px-4 max-w-7xl">
            <div class="text-center mb-16">
                <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">Nos Packs Vidéo</h2>
                <p class="text-lg text-gray-400 max-w-3xl mx-auto">
                    Chaque pack est conçu par nos chorégraphes experts pour vous offrir une expérience immersive et de haute qualité.
                </p>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12">
                {% for pack in packs %}
                <div class="bg-gray-900 rounded-2xl shadow-lg overflow-hidden card-hover-effect border border-gray-800 flex flex-col">
                    <div class="relative">
                        <img alt="{{ pack.name }}" class="w-full h-80 object-cover" src=""/>
                        <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent"></div>
                        <div class="absolute bottom-0 left-0 p-6">
                            <h3 class="text-2xl font-bold text-white">{{ pack.name }}</h3>
                        </div>
                    </div>
                    <div class="p-6 flex-grow flex flex-col">
                        <p class="text-gray-400 mb-6 flex-grow">a voir pour ajouter description</p>
                        <div class="flex justify-between items-center mb-6">
                            <span class="text-3xl font-bold text-[var(--primary-color)]">{{ pack.price }}€</span>
                            <span class="text-sm text-gray-400 bg-gray-800 px-3 py-1 rounded-full"> Vidéos</span>
                        </div>
                         <a href="{{ path('pack_detail', {'id': pack.id}) }}">
                            <button class="w-full bg-[var(--primary-color)] text-black font-bold py-3 px-6 rounded-lg hover:bg-yellow-500 transition-all duration-300 transform hover:scale-105">
                                Découvrir le Pack
                            </button>
                        </a>
                    </div>
                </div>
                {% endfor %}
            </div>

            <div class="text-center mt-20">
                <button class="bg-transparent border-2 border-[var(--primary-color)] text-[var(--primary-color)] font-bold py-4 px-10 rounded-full hover:bg-[var(--primary-color)] hover:text-black transition-all duration-300 transform hover:scale-105 text-lg group">
                    Voir Plus de Packs
                    <span class="material-symbols-outlined ml-2 align-middle transition-transform duration-300 group-hover:translate-x-1">arrow_forward</span>
                </button>
            </div>
        </div>
    </section>

    {# Footer Section #}
    <footer class="bg-gray-900 border-t border-gray-800 py-8">
        <div class="container mx-auto px-4 text-center text-gray-400">
            <p>© 2024 DanceFlow. Tous droits réservés.</p>
            <div class="flex justify-center gap-6 mt-4">
                <a class="hover:text-[var(--primary-color)] transition-colors duration-300" href="#">Facebook</a>
                <a class="hover:text-[var(--primary-color)] transition-colors duration-300" href="#">Instagram</a>
                <a class="hover:text-[var(--primary-color)] transition-colors duration-300" href="#">Twitter</a>
            </div>
        </div>
    </footer>

</main>
{% endblock %}
