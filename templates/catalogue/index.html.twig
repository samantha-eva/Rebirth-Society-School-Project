{% extends 'base.html.twig' %}

{% block title %}Catalogue{% endblock %}

{% block body %}
<main class="container mx-auto px-4 py-8 max-w-7xl">

  <div class="text-center mb-12">
    <h1 class="text-4xl md:text-5xl font-bold text-[var(--text-primary)] mb-4">Catalogue Vidéo</h1>
    <p class="text-lg text-[var(--text-secondary)] leading-relaxed max-w-3xl mx-auto">
      Explore our curated collection of dance video packs and individual classes.
    </p>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
    {% for el in elements %}
      <div class="bg-gray-800 rounded-lg shadow-lg overflow-hidden border border-gray-700 group">
        <div class="relative">
          <div class="w-full bg-center bg-no-repeat aspect-[3/4] bg-cover rounded-t-lg"
               style="background-image: url('{{ el.image ?? 'https://via.placeholder.com/300x400' }}');">
          </div>
          <div class="absolute inset-0 bg-black bg-opacity-20 group-hover:bg-opacity-50 transition-all duration-300"></div>
          <div class="absolute bottom-4 left-4 right-4">
            <h3 class="text-white text-lg font-bold">{{ el.name }}</h3>

            {% if el.type == 'pack' %}
              <span class="badge badge-pack">Pack</span>
              <p class="text-gray-300 text-sm">{{ el.videos|length }} vidéos</p>
            {% else %}
              <span class="badge badge-video">Cours individuel</span>
              <p class="text-gray-300 text-sm">Catégorie : {{ el.categorie.name }}</p>
            {% endif %}
          </div>
        </div>
      </div>
    {% endfor %}
  </div>

</main>
{% endblock %}
